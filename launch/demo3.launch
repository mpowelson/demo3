<launch>
    <arg name="rviz" default="true"/>
    <arg name="camera_on_EE" default="true"/>

    <!-- Load Robot Model    -->
    <param name="robot_description"  command="$(find xacro)/xacro --inorder $(find demo3_support)/urdf/demo3.urdf"/>

    <!-- Launch GUI to drive joints   -->
    <param name="use_gui" value="true"/>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

    <!-- Launch robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />

    <!-- Insert transforms for cameras x y z yaw(z) pitch(y) roll(x)-->
    <node pkg="tf" type="static_transform_publisher" name="camera_tf_broadcaster"
        args="0.75 0.5 .75 2.7 0 -2.4 base_link camera 10" />

    <!-- Launch 3D camera simulator -->
    <node name="sensor_sim" pkg="demo3" type="sensor_simulator_3d"
         output="screen"/>

    <!-- Launch vision node -->
    <include file="$(find demo3_perception)/launch/processing_node.launch" />

    <!-- Launch visualization -->
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="demo3_viz"
        args="-d $(find demo3)/launch/demo3.rviz" />

</launch>
